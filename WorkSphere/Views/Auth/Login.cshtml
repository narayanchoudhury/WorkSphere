@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Real Estate CRM - Login</title>
    <link rel="shortcut icon" type="image/png" href="~/assets/images/favicon.png" />
    <link href="~/assets/vendor/jquery-nice-select/css/nice-select.css" rel="stylesheet" />
    <link href="~/assets/vendor/owl-carousel/owl.carousel.css" rel="stylesheet" />
    <link href="~/assets/css/style.css" rel="stylesheet" />
    <style type="text/css">
        body {
            background-image: url(@Url.Content("~/assets/images/login-bg.jpg"));
            background-size: cover;
            background-position: bottom;
        }
        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(-135deg, rgba(29, 233, 182, 0.5) 0%, rgba(29, 196, 233, 0.5) 100%);
            color: white;
        }
    </style>
</head>
<body class="vh-100">
    <div class="authincation h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100 align-items-center">
                <div class="col-md-6">
                    <div class="authincation-content">
                        <div class="row no-gutters">
                            <div class="col-xl-12">
                                <div class="auth-form">
                                    <div class="text-center mb-3">
                                        <a href="@Url.Action("Index", "Home")"><h2>Work Sphere</h2></a>
                                    </div>
                                    <h4 class="text-center mb-4">Sign in to your account</h4>

                                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                                    {
                                        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                                    }

                                    <form method="post" action="@Url.Action("Login", "Auth")">
                                        <div class="mb-3">
                                            <label class="mb-1"><strong>Username</strong></label>
                                            <input type="text" name="username" class="form-control" required />
                                        </div>
                                        <div class="mb-3">
                                            <label class="mb-1"><strong>Password</strong></label>
                                            <input type="password" name="password" class="form-control" required />
                                        </div>
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                                        </div>
                                    </form>

                                    <div class="new-account mt-3">
                                        <p><a href="@Url.Action("ForgotPassword", "Auth")" class="text-primary">Forgot Password?</a></p>
                                        <p>Don't have an account? <a class="text-primary" href="@Url.Action("Register", "Auth")">Register</a></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/assets/vendor/global/global.min.js"></script>
    <script src="~/assets/js/custom.min.js"></script>
    <script src="~/assets/js/dlabnav-init.js"></script>
    <script src="~/assets/js/styleSwitcher.js"></script>
</body>
</html>
