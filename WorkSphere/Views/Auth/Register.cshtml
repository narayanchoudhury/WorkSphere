@{
    ViewBag.Title = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Work Sphere - Forgot Password</title>
    <link rel="shortcut icon" type="image/png" href="~/assets/images/favicon.png" />
    <link href="~/assets/vendor/jquery-nice-select/css/nice-select.css" rel="stylesheet" />
    <link href="~/assets/vendor/owl-carousel/owl.carousel.css" rel="stylesheet" />
    <link href="~/assets/css/style.css" rel="stylesheet" />
    <style type="text/css">
body {
    background-image: url(@Url.Content("~/assets/images/login-bg.jpg"));
    background-size: cover;
    background-position: bottom;
}
    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(-135deg, rgba(29, 233, 182, 0.5) 0%, rgba(29, 196, 233, 0.5) 100%);
        color: white;
    }
    </style>
</head>
<body class="vh-100">
    <div class="authincation h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100 align-items-center">
                <div class="col-md-6">
                    <div class="authincation-content">
                        <div class="row no-gutters">
                            <div class="col-xl-12">
                                <div class="auth-form">
                                    <div class="text-center mb-3">
                                        <a href="@Url.Action("Index", "Home")"><h2>Work Sphere</h2></a>
                                    </div>
                                    <h4 class="text-center mb-4">Create Your Account</h4>

                                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                                    {
                                        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                                    }

                                    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
                                    {
                                        <div class="alert alert-success">@ViewBag.SuccessMessage</div>
                                    }

                                    <form method="post" action="@Url.Action("Register", "Auth")">
                                        <div class="mb-3">
                                            <label class="mb-1"><strong>Username</strong></label>
                                            <input type="text" name="username" class="form-control" required />
                                        </div>
                                        <div class="mb-3">
                                            <label class="mb-1"><strong>Password</strong></label>
                                            <input type="password" name="password" class="form-control" required />
                                        </div>
                                        <div class="mb-3">
                                            <label class="mb-1"><strong>Full Name</strong></label>
                                            <input type="text" name="fullName" class="form-control" required />
                                        </div>
                                        <div class="mb-3">
                                            <label class="mb-1"><strong>Role</strong></label>
                                            <select name="role" class="form-control">
                                                <option value="User">User</option>
                                                <option value="Admin">Admin</option>
                                            </select>
                                        </div>
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-primary btn-block">Register</button>
                                        </div>
                                    </form>

                                    <div class="new-account mt-3">
                                        <p>Already have an account? <a class="text-primary" href="@Url.Action("Login", "Auth")">Sign in</a></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/assets/vendor/global/global.min.js"></script>
    <script src="~/assets/js/custom.min.js"></script>
    <script src="~/assets/js/dlabnav-init.js"></script>
    <script src="~/assets/js/styleSwitcher.js"></script>
</body>
</html>
